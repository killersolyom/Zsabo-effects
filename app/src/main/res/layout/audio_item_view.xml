<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    tool:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:id="@+id/audio_item_layout"
    android:layout_width="@dimen/audio_item_size"
    android:layout_height="@dimen/audio_item_size">

    <ImageView
        android:layout_width="@dimen/audio_item_size"
        android:layout_height="@dimen/audio_item_size"
        android:background="@drawable/audio_item_background_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="@dimen/audio_item_size"
        android:layout_height="@dimen/audio_item_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title_text_view"
        android:layout_width="@dimen/audio_item_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_image_view"
        app:layout_constraintEnd_toEndOf="@id/item_image_view" />

</merge>